<odoo>
    <data>
        <record model="workflow" id="wkf_expense_quotation">
            <field name="name">Approval Online Quotation Workflow</field>
            <field name="osv">hr.expense_approval.request_quotation</field>
            <field name="on_create">True</field>
        </record>

        <record model="workflow.activity" id="draft">
            <field name="name">Draft</field>
            <field name="wkf_id" ref="wkf_expense_quotation"/>
            <field name="flow_start" eval="True"/>
            <field name="kind">function</field>
            <field name="action">action_draft()</field>
        </record>
        <record model="workflow.activity" id="confirmed">
            <field name="name">Confirmed</field>
            <field name="wkf_id" ref="wkf_expense_quotation"/>
            <field name="kind">function</field>
            <field name="action">action_confirm()</field>
        </record>
        <record model="workflow.activity" id="approved">
            <field name="name">Approve</field>
            <field name="wkf_id" ref="wkf_expense_quotation"/>
            <field name="kind">function</field>
            <field name="action">action_approve()</field>
        </record>
        <record model="workflow.activity" id="done">
            <field name="name">Done</field>
            <field name="wkf_id" ref="wkf_expense_quotation"/>
            <field name="kind">function</field>
            <field name="action">action_done()</field>
        </record>

        <record model="workflow.transition" id="quotation_draft_to_confirmed">
            <field name="act_from" ref="draft"/>
            <field name="act_to" ref="confirmed"/>
            <field name="signal">confirm</field>
        </record>
        <record model="workflow.transition" id="quotation_confirmed_to_draft">
            <field name="act_from" ref="confirmed"/>
            <field name="act_to" ref="draft"/>
            <field name="signal">draft</field>
        </record>
        <record model="workflow.transition" id="quotation_approved_to_draft">
            <field name="act_from" ref="approved"/>
            <field name="act_to" ref="draft"/>
            <field name="signal">draft</field>
        </record>
        <record model="workflow.transition" id="quotation_done_to_draft">
            <field name="act_from" ref="done"/>
            <field name="act_to" ref="draft"/>
            <field name="signal">draft</field>
        </record>
        <record model="workflow.transition" id="quotation_confirmed_to_approved">
            <field name="act_from" ref="confirmed"/>
            <field name="act_to" ref="approved"/>
            <field name="signal">approved</field>
        </record>
         <record model="workflow.transition" id="quotation_approved_to_done">
            <field name="act_from" ref="approved"/>
            <field name="act_to" ref="done"/>
            <field name="signal">done</field>
        </record>
    </data>
</odoo>